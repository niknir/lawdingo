<%= form_for ['admin', @lawyer], :method=>'post' do |f| %>
  Full Name :<br/>
  <%= f.text_field :full_name %> <br/>
  Skype : <br/>
  <%= f.text_field :skype %> <br/>
  Photo : <br/>
  <%= f.file_field :photo %> <br/>
  Bar Memberships: <br/>
  <%= f.text_area :bar_memberships, :size =>'50x3' %><br/>
  Areas of Expertise: <br/>
  <%= f.text_area :areas_of_expertise, :size =>'50x3' %><br/>
  Alma Maters: <br/>
  <%= f.text_area :alma_maters, :size =>'50x3' %> <br/>
  <%= f.submit @lawyer.new_record? ? 'Add Profile' : 'Update Profile' %>
<% end %>
